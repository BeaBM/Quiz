<!DOCTYPE html>
<html>
  <head>
    <title>Quiz</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
  </head>
  <body>
       <table class="tabla">
       <% var i; for (i=0; i < quizes.length; i++) { %>
        <tr><td align=center><a href="quizes/<%= quizes[i].id %>">Pregunta <%= i+1 %>. <%= quizes[i].pregunta %></a></td>
          <%if(session.user) {%>
        <td><a href="/quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
        <td>
        <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
            <button type="submit" onClick=" return confirm('Borrar: <%= quizes[i].pregunta %>');">
              borrar

            </button>
          </form>
        </td>
             <% } %>

      </tr>
     <% } %>
    </table>
    
    <form name="buscador" id="finder" action="/busqueda" method="get">
        Buscador: <input type="text" name="formulario" value="Quizes a buscar">
        <button type="submit">Buscar</button>
    </form>
    <%if(session.user){%>
  <a href="/quizes/new"><button>Crear pregunta</button></a>
<%}%>
    
  </body>
</html>
